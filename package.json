{
  "name": "deals-api",
  "version": "0.0.1",
  "description": "",
  "author": "jmechevarria2015@gmail.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "build": "npm run lint && npm run build-ts && npm run copy-static-assets",
    "build-local": "npm run eslint && (npm run format-check || npm run format-fix) && npm run build-ts && npm run copy-static-assets",
    "build-ts": "tsc --project tsconfig.build.json",
    "clean": "npx del-cli dist",
    "clean-build": "npm run clean && npm i && npm run build",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "depcheck": "npx depcheck",
    "format-fix": "prettier -w \"**/*.{js,ts}\"",
    "format-check": "prettier --check \"**/*.{js,ts}\"",
    "lint": "npm run eslint && npm run format-check",
    "eslint": "eslint \"**/*.{js,ts}\"",
    "peercheck": "npx check-peer-dependencies",
    "start": "node --preserve-symlinks dist/server.js",
    "start-debug": "nodemon --inspect=0.0.0.0:9229 --watch dist dist/server.js",
    "dev": "npm run build-local && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run start-debug\"",
    "watch-ts": "tsc --project tsconfig.build.json -w",
    "rebuild-backend-openapi-v1": "npx del-cli ./src/api-clients/backend-openapi-v1 && openapi -i ./src/api-functions/backend-openapi-v1.yaml -o ./src/api-clients/backend-openapi-v1 -c axios --exportServices false --exportCore false && npm run format-fix",
    "copy-functions-resources": "ts-node copyFunctionsResources.ts"
  },
  "dependencies": {
    "@netlify/functions": "^2.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express-openapi-validator": "^5.2.0",
    "jsonwebtoken": "^9.0.2",
    "lusca": "^1.7.0",
    "mongoose": "^8.4.3",
    "reflect-metadata": "^0.2.0",
    "serverless-http": "^3.2.0",
    "swagger-routes-express": "^3.3.2",
    "swagger-ui-express": "^5.0.1",
    "ts-nested-error": "^1.2.1",
    "uuid": "^10.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/lusca": "^1.7.5",
    "@types/node": "^20.3.1",
    "@types/shelljs": "^0.8.15",
    "@types/supertest": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "nodemon": "^3.1.4",
    "openapi-typescript-codegen": "^0.29.0",
    "prettier": "^3.0.0",
    "shelljs": "^0.8.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
